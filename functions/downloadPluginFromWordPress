import { createClientFromRequest } from './base44Shim.js';
import JSZip from 'npm:jszip@3.10.1';

Deno.serve(async (req) => {
    try {
        const base44 = createClientFromRequest(req);
        const user = await base44.auth.me();

        if (!user) {
            return Response.json({ error: 'Unauthorized' }, { status: 401 });
        }

        const { site_id, plugin_slug } = await req.json();

        console.log('[downloadPluginFromWordPress] === START ===');
        console.log('[downloadPluginFromWordPress] Site ID:', site_id);
        console.log('[downloadPluginFromWordPress] Plugin slug:', plugin_slug);

        if (!site_id || !plugin_slug) {
            return Response.json({ error: 'Site ID and plugin slug are required' }, { status: 400 });
        }

        // Get site details
        const sites = await base44.entities.Site.filter({ id: site_id });
        
        if (sites.length === 0) {
            console.log('[downloadPluginFromWordPress] Site not found');
            return Response.json({ error: 'Site not found' }, { status: 404 });
        }

        const site = sites[0];
        console.log('[downloadPluginFromWordPress] Site:', site.name, site.url);

        // Call WordPress REST API to download plugin files
        const wpEndpoint = `${site.url}/wp-json/wphub/v1/downloadPlugin`;
        console.log('[downloadPluginFromWordPress] Calling WordPress connector:', wpEndpoint);

        const wpResponse = await fetch(wpEndpoint, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                api_key: site.api_key,
                plugin_slug: plugin_slug
            })
        });

        if (!wpResponse.ok) {
            const errorText = await wpResponse.text();
            console.error('[downloadPluginFromWordPress] WordPress API error:', wpResponse.status, errorText);
            return Response.json({ 
                error: 'Failed to download plugin from WordPress',
                details: errorText,
                status: wpResponse.status
            }, { status: 502 });
        }

        const result = await wpResponse.json();
        console.log('[downloadPluginFromWordPress] WordPress response received');

        if (!result.success || !result.plugin_data) {
            return Response.json({ 
                error: 'Failed to get plugin data from WordPress',
                details: result.message || 'Unknown error'
            }, { status: 500 });
        }

        const pluginData = result.plugin_data;
        console.log('[downloadPluginFromWordPress] Plugin:', pluginData.name, 'v' + pluginData.version);

        // Create ZIP from base64 data
        const zipData = Uint8Array.from(atob(result.zip_base64), c => c.charCodeAt(0));
        
        console.log('[downloadPluginFromWordPress] ZIP data size:', zipData.length, 'bytes');

        // Upload to storage
        const zipFile = new File([zipData], `${plugin_slug}-v${pluginData.version}.zip`, {
            type: 'application/zip'
        });

        const { file_url } = await base44.integrations.Core.UploadFile({ file: zipFile });

        console.log('[downloadPluginFromWordPress] Uploaded to storage:', file_url);

        // Return plugin data and file URL
        return Response.json({ 
            success: true,
            plugin_data: pluginData,
            file_url: file_url,
            message: `Plugin ${pluginData.name} v${pluginData.version} succesvol gedownload`
        });

    } catch (error) {
        console.error('[downloadPluginFromWordPress] ‚ùå ERROR:', error.message);
        console.error('[downloadPluginFromWordPress] Stack:', error.stack);
        return Response.json({ 
            error: error.message,
            stack: error.stack
        }, { status: 500 });
    }
});